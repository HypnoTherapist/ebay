<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Top menu item -->
        <menuitem id="menu_ebay_top" name="eBay"/>
        
        <menuitem id="menu_ebay_user" name="User" sequence="70" parent="menu_ebay_top"/>
        
        <record id="act_ebay_user_2_seller_listing" model="ir.actions.act_window">
            <field name="name">eBay Seller Lists</field>
            <field name="res_model">ebay.seller.list</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_user_id': active_id}</field>
        </record>
        
        <record model="ir.ui.view" id="ebay_user_form_view">
            <field name="name">ebay user form</field>
            <field name="model">ebay.user</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="ebay user form" version="7.0">
                    <header>
                        <button name="%(ebay_authorize)d" string="Authorize" type="action" attrs="{'invisible': [('ownership','=',False)]}"/>
                        <button class="oe_highlight" name="action_get_user" string="Update User Info" type="object"/>
                        <button class="oe_highlight" name="action_get_seller_list" confirm="Are you sure you want to update this seller's list?" string="Update Seller List" type="object"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <div class="oe_edit_only">
                                <label for="name"/>
                            </div>
                            <h1>
                                <field name="name" default_focus="1" placeholder="eBay User ID" />
                            </h1>
                        </div>
                        <div class="oe_right oe_button_box" name="buttons">
                            <button name="%(ebay.act_ebay_user_2_seller_listing)d" type="action" string="Seller Lists"/>
                        </div>
                        <group>
                            <group>
                                <field name="ownership" invisible="1"/>
                                <field name="sandbox"/>
                                <field name="email" attrs="{'invisible': [('ownership','=',False)]}"/>
                                <field name="site"/>
                                <field name="registration_date"/>
                                <field name="store_owner"/>
                                <field name="store_site" attrs="{'invisible': [('store_owner','=',False)]}"/>
                                <field name="store_url" widget='url' attrs="{'invisible': [('store_owner','=',False)]}"/> 
                            </group>
                            <group>
                                <field name="top_rated_seller"/>
                                <field name="feedback_rating_star"/>
                                <field name="feedback_score"/>
                                <field name="positive_feedback_percent"/>
                                <field name="unique_positive_feedback_count"/>
                                <field name="unique_neutral_feedback_count"/>
                                <field name="unique_negative_feedback_count"/>
                                <field name="monthly_sales"/>
                                <field name="monthly_sales_volume"/>
                            </group>
                        </group>
                        <group attrs="{'invisible': [('ownership','=',False)]}">
                            <field name="paypal_email_address"/>
                            <field name="country"/>
                            <field name="location"/>
                            <field name="sale_site"/>
                            <field name="app_id"/>
                            <field name="dev_id"/>
                            <field name="cert"/>
                            <field name="ru_name"/>
                            <field name="hard_expiration_time"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record model="ir.ui.view" id="ebay_user_tree_view">
            <field name="name">ebay user tree</field>
            <field name="model">ebay.user</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="ebay user tree">
                    <field name="name"/>
                    <field name="top_rated_seller"/>
                    <field name="monthly_sales"/>
                    <field name="monthly_sales_volume"/>
                    <field name="feedback_score"/>
                    <field name="positive_feedback_percent"/>
                    <field name="registration_date"/>
                    <field name="site"/>
                </tree>
            </field>
        </record>
        
        <record id="action_ebay_ownership_tree" model="ir.actions.act_window">
            <field name="name">Ownership</field>
            <field name="res_model">ebay.user</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('ownership','=',1)]</field>
            <field name="context">{'default_ownership':1}</field>
        </record>
        <menuitem id="menu_ebay_ownership" action="action_ebay_ownership_tree" sequence="20" parent="menu_ebay_user"/>
        
        <record id="action_ebay_seller_tree" model="ir.actions.act_window">
            <field name="name">Sellers</field>
            <field name="res_model">ebay.user</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('ownership','=',0)]</field>
            <field name="context">{'default_ownership':0}</field>
        </record>
        <menuitem id="menu_ebay_sellers" action="action_ebay_seller_tree" sequence="30" parent="menu_ebay_user"/>
        
        <record id="action_ebay_customer_form" model="ir.actions.act_window">
            <field name="name">Customers</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[('customer','=',1),('from_ebay','=',1)]</field>
            <field name="context">{'default_customer':1, 'default_from_ebay':1, 'search_default_customer':1, 'search_default_from_ebay':1}</field>
            <field name="filter" eval="True"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a contact in your address book.
              </p><p>
                OpenERP helps you easily track all activities related to
                a customer: discussions, history of business opportunities,
                documents, etc.
              </p>
            </field>
        </record>
        
        <menuitem id="menu_ebay_customer" name="Customers"
            parent="menu_ebay_user"
            action="action_ebay_customer_form" sequence="40"/>
        
        <record model="ir.ui.view" id="ebay_seller_list_tree_view">
            <field name="name">ebay seller list tree</field>
            <field name="model">ebay.seller.list</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="ebay seller list tree">
                    <field name="name"/>
                    <field name="currency"/>
                    <field name="start_price"/>
                    <field name="hit_count"/>
                    <field name="watch_count"/>
                    <field name="quantity_sold"/>
                    <field name="average_monthly_sales"/>
                    <field name="start_time"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.ui.view" id="ebay_seller_list_from_view">
            <field name="name">ebay seller list form</field>
            <field name="model">ebay.seller.list</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="ebay user form" version="7.0">
                    <sheet>
                        <!-- <div><field name="thumbnail" widget="image" class="oe_avatar oe_left"/></div> -->
                        <div>
                            <div class="oe_edit_only">
                                <label for="name"/>
                            </div>
                            <h2>
                                <field name="name" default_focus="1" placeholder="item title" />
                            </h2>
                            <field name="view_item_url" widget='url'/>
                        </div>
                        <group>
                            <field name="user_id"/>
                        </group>
                        <group>
                            <group>
                                <field name="start_price"/>
                                <field name="start_time"/>
                                <field name="quantity_sold"/>
                                <field name="hit_count"/>
                            </group>
                            <group>
                                <field name="currency"/>
                                <field name="end_time"/>
                                <field name="average_monthly_sales"/>
                                <field name="watch_count"/>
                            </group>
                        </group>
                        <field name="picture"/>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="view_seller_list_filter" model="ir.ui.view">
            <field name="name">view_seller_list_filter</field>
            <field name="model">ebay.seller.list</field>
            <field name="arch" type="xml">
                <search string="Search Seller List">
                    <field name="user_id"/>
               </search>
            </field>
        </record>
        
        <menuitem id="menu_ebay_sale_management" name="Sales" parent="menu_ebay_top" sequence="50"/>
    </data>
</openerp>
