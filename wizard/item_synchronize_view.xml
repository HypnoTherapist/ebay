<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- wizard view -->
        <record model="ir.ui.view" id="ebay_item_synchronize_view">
            <field name="name">ebay item synchronize </field>
            <field name="model">ebay.item.synchronize</field>
            <field name="arch" type="xml">
                <form string="ebay item synchronize " version="7.0">
		    <field name="state" invisible="1"/>
		    <separator string="Synchronize listing for the specified ebay user"/>
		    <div states="option">
			<group>
			    <field name="ebay_user_id"/>
			    <field name="defer"/>
			</group>
		    </div>
		    <footer states="option">
			<button name="action_sync" string="Synchronize" type="object" class="oe_highlight"/>
			or
			<button string="Cancel" class="oe_link" special="cancel" />
		    </footer>
		    <div states="complete">
			<p>Synchronize Complete</p>
			<group>
			    <field name="new_count"/>
			    <field name="updated_count"/>
			</group>
		    </div>
		    <footer states="complete">
                        <button name="action_close" string="Close" type="object" class="oe_highlight"/>
                    </footer>
		</form>
	    </field>
	</record>

        <record id="action_ebay_item_synchronize_view" model="ir.actions.act_window">
            <field name="name">Synchronize</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ebay.item.synchronize</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem
            name="Synchronize"
            action="action_ebay_item_synchronize_view"
            id="menu_ebay_item_synchronize_view"
            parent="ebay_menu_listing_activity"
            sequence="25"/>

    </data>
</openerp>
