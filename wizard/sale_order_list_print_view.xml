<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- wizard view -->
        <record model="ir.ui.view" id="sale_order_list_print_view">
            <field name="name">ebay sale order list print</field>
            <field name="model">ebay.sale.order.list.print</field>
            <field name="arch" type="xml">
                <form string="ebay sale order list print" version="7.0">
		    <separator string="Print Delivery Slip"/>
		    <group states="option">
			<field name="count"/>
			<field name="carrier"/>
			<field name="state" invisible="1"/>
		    </group>
		    <footer states="option">
			<button name="action_print" string="Print" type="object" class="oe_highlight"/>
			or
			<button string="Cancel" class="oe_link" special="cancel" />
		    </footer>
		    <div states="download">
			<p>Here is the delivery slip file: <field name="data" readonly="1" filename="name"/></p>
			<p>This file was generated using the universal <strong>Unicode/UTF-8</strong> file encoding,<br/>
			   please be sure to view and edit using the same encoding.</p> 
		    </div>
		    <footer states="download">
			<button special="cancel" string="Close" type="object"/>
		    </footer>
		</form>
	    </field>
	</record>

        <act_window id="sale_order_list_print"
            multi="True"
            key2="client_action_multi" name="Print Delivery Slip"
            res_model="ebay.sale.order.list.print" src_model="ebay.sale.order"
            view_mode="form" target="new" view_type="form" view_id="sale_order_list_print_view"/>

    </data>
</openerp>
